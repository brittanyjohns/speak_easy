<div>
  <p class="text-gray-600 text-xs">Response Board<%= time_ago_in_words(@response_board.created_at) %> ago</p>
    <p class="text-gray-600 text-xs">Response Image: <%= time_ago_in_words(@response_board.source_response_image.created_at) %> ago</p>
    <p class="text-gray-600 text-xs">Image: <%= time_ago_in_words(@response_board.source_response_image.image.created_at) %> ago</p>
    <p class="text-gray-600 text-xs">Response Records: <%= @response_board.response_records.count %> </p>
        <p class="text-gray-600 text-xs">Last Response Record: <%= time_ago_in_words(@response_board.response_records.last.created_at) if @response_board.response_records.any? %> ago</p>


  <h1 class="font-bold text-4xl">
    <%= link_to @response_board.source_response_image.label, create_response_board_image_path(@response_board.source_response_image.image), class: "rounded-lg", data: { turbo: false } %>
  </h1>
  <p class="text-gray-600 text-xs">response_images: <%= @response_board.response_images.pluck(:label) %></p>

  <% # <%= turbo_stream_from :response_image_list %> 
  <div id='response_image_list' class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
      <%= render partial: "response_images/response_image", collection: @response_options %>
  </div>
</div>

