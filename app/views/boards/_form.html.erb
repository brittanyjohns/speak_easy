<%= form_with(model: board, class: "contents") do |form| %>
  <% if board.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(board.errors.count, "error") %> prohibited this board from being saved:</h2>

      <ul>
        <% board.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :theme_color, "Theme Color", class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :theme_color,
                    options_for_select(Board.theme_color_options),
                    {},
                    class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="mb-4">
    <%= form.label :grid_size, "Grid Size", class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :grid_size,
                    options_for_select(["2x2", "3x3", "4x4", "5x5", "6x6", "7x7", "8x8"]),
                    {},
                    class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>
    <div class="mb-4">

      <%= form.submit class: "rounded-lg py-2 px-2 outline font-medium cursor-pointer" %>
        <%= link_to "Cancel", boards_path, class: "ml-2 rounded-lg py-3 px-5 bg-red-400 inline-block font-medium" %>


</div>
<% end %>
