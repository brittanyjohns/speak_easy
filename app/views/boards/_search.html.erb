<%= form_with(url: board_path(@board), method: :get, class: "mr-5", data: { controller: "search-form", turbo_frame: "board_images", turbo_action: "advance" }) do |form| %>
  <%= form.label :query, "Search images:", class: "block mb-2" %>
  <div class="flex space-x-3">
    <%= form.text_field :query, class: "py-2 px-3 rounded border ring-0 focus:ring-4 focus:ring-orange-100 focus:shadow-none focus:border-orange-500 focus:outline-none", data: { search_form_target: "query", action: "input->search-form#search" } %>

    <%= form.submit "Search", class: "px-3 py-2 font-medium bg-orange-300 text-neutal-900 rounded flex items-center cursor-pointer hover:bg-orange-400 focus:ring-4 ring-0 focus:ring-orange-100 mr-3" %>
  </div>
<% end %>
