 <h2 class="text-2xl font-bold mb-2"><%= @board.name %></h2>
 <%= link_to "PLAY MODE (FULLSCREEN)", locked_board_path(@board), class: "mt-2 mb-10 rounded-lg py-3 px-5 bg-orange-600 text-white inline-block font-medium" %>
    

<div class="flex justify-between">
  <%= print_grid_with_blanks(@board) %>
  <div class="mx-auto max-h-screen overflow-scroll place-items-center">
     <%= render "boards/search" %>
     <div class="my-6">
      <%= render "board_images", images: @board_images %>
    </div>
  </div>
  
</div>

<div class="inline-block ml-2 place-items-end">
  <%= link_to "Edit", edit_board_path(@board), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= button_to "Destroy", board_path(@board), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-600 text-white font-medium", form_class: "inline-block" %>
</div>