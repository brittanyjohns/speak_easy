<div class="min-h-screen bg-gradient-to-tr from-purple-400 to-blue-500 flex items-center justify-center py-5 px-4">
  <div class="bg-white p-10 rounded-lg shadow-xl w-96">
    <h2 class="text-center text-2xl font-bold mb-5 text-gray-700">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field space-y-2">
        <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full px-3 py-2 border rounded-md border-gray-300 focus:ring focus:ring-indigo-200 focus:border-indigo-300" %>
      </div>

      <div class="field space-y-2">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-md border-gray-300 focus:ring focus:ring-indigo-200 focus:border-indigo-300" %>
      </div>

      <div class="field space-y-2">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <% if @minimum_password_length %>
        <em class="block text-xs text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-md border-gray-300 focus:ring focus:ring-indigo-200 focus:border-indigo-300" %>
      </div>

      <div class="field space-y-2">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-md border-gray-300 focus:ring focus:ring-indigo-200 focus:border-indigo-300" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "w-full bg-indigo-600 text-white p-2 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-200 focus:ring-offset-1" %>
      </div>
    <% end %>

    <div class="mt-5">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
