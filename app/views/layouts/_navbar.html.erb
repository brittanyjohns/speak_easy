<% if user_signed_in? && action_name == "locked" %>
<div class="bg-blue-600 text-white p-4 shadow-md">
  <div class="container mx-auto">
    <div class="justify-between items-center">
    <%= link_to @board do %>
      <h1 class="text-xl font-bold text-white-700"><%= icon("fa-solid", "arrow-left") %></h1>
    <% end %>
      </div>
  </div>
</div>
<% elsif user_signed_in? %>
<div class="bg-blue-600 text-white p-4 shadow-md">
  <div class="container mx-auto">
    <div class="justify-between items-center">
      <!-- Brand/Logo -->
      <a href="<%= root_path %>" class="inline-block"><h1 class="text-4xl font-bold text-white-700">SpeakEasy</h1></a>

      <!-- Navigation Links -->
      <div class=" space-x-4 mt-3">
        <%= link_to "New Image", new_image_path, class: "hover:text-blue-300" %>
        <%= link_to "New Board", new_board_path, class: "hover:text-blue-300" %>
        <%= link_to "My Boards", boards_path, class: "hover:text-blue-300" %>
        <%= link_to "Images", images_path, class: "hover:text-blue-300" %>
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "hover:text-blue-300", form_class: "inline-block" %>
      </div>
    </div>
  </div>
</div>
<% else %>
<div class="container mx-auto px-4 py-4">
  <!-- Header Section -->
  <header class="justify-between items-center">
      <a href="<%= root_path %>"><h1 class="text-4xl font-bold text-blue-700">SpeakEasy</h1></a>
      <nav class=" space-x-4 mt-3">
          <a href="#" class="text-blue-600 hover:text-blue-800 mx-4">About</a>
          <a href="#" class="text-blue-600 hover:text-blue-800 mx-4">Features</a>
          <a href="#" class="text-blue-600 hover:text-blue-800 mx-4">Contact</a>
          <%= link_to "Sign up", new_user_registration_path, class: "text-blue-600 hover:text-blue-800 mx-4" %>
          <%= link_to "Login", new_user_session_path, class: "text-blue-600 hover:text-blue-800 mx-4" %>
      </nav>
  </header>
</div>
<% end %>