<!DOCTYPE html>
<html>
  <head>
    <title>SpeakEasy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-blue-50 h-screen">
    <div class="bg-blue-600 text-white p-4 shadow-md">
      <div class="container mx-auto">
        <div class="justify-between items-center">
        <%= link_to @board do %>
          <h1 class="text-xl font-bold text-white-700"><%= icon("fa-solid", "arrow-left") %></h1>
        <% end %>
          </div>
      </div>
    </div>
    <div class="relative min-h-screen overflow-hidden bg-gray-50 pt-8">
       <%= render "layouts/notice" %>
       <%= render "layouts/alert" %>
      <%= yield %>
    </div>

  </body>
</html>
