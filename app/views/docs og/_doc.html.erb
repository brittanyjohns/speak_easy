<div id="<%= dom_id doc %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= doc.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Documentable:</strong>
    <%= doc.documentable_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Image:</strong>
    <%= link_to doc.image.filename, doc.image if doc.image.attached? %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Image description:</strong>
    <%= doc.image_description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this doc", doc, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this doc", edit_doc_path(doc), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
